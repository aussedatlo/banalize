    "@repo/typescript-config": "workspace:^",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }

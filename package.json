{
  "name": "banalize-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "api": "pnpm --filter api",
    "build": "turbo build",
    "clean": "turbo clean",
    "commit": "gitmoji -c",
    "dev": "turbo dev",
    "docker:api:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up api",
    "docker:mongodb:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up mongodb",
    "docker:web:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "web": "pnpm --filter web"
  },
  "devDependencies": {
    "@banalize/eslint-config": "workspace:*",
    "@banalize/stylelint-config": "workspace:*",
    "@banalize/typescript-config": "workspace:*",
    "gitmoji-cli": "^9.4.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "turbo": "2.0.9"
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18"
  }
}
